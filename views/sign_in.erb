<h1>Team</h1>
<h3><%= @team.name %></h3>


<form action="/api/v1/<%= @team.unique_id %>/signup" method="post">
   <h2>アカウント作成</h2>
   <label for="name">ニックネーム</label>
   <input type="text" name="name" id="name">
   <label for="pass">パス</label>
   <input type="number" name="pass" id="pass">
   <input type="submit" value="作成">
</form>

<form action="/api/v1/<%= @team.unique_id %>/signin" method="post">
   <h2>ログイン</h2>
   <label for="pass">パス</label>
   <input type="number" name="pass" id="pass">
   <input type="submit" value="ログイン">
</form>
